# This is an example file. Create k8s/secrets.yml with actual values
# DO NOT commit secrets.yml to version control
apiVersion: v1
kind: Secret
metadata:
  name: irrigation-secrets
  namespace: irrigation-production
type: Opaque
stringData:
  POSTGRES_USER: "irrigation_user"
  POSTGRES_PASSWORD: "change_me_in_production"
  MONGODB_USER: "mongo_user"
  MONGODB_PASSWORD: "change_me_in_production"
  RABBITMQ_USER: "rabbitmq_user"
  RABBITMQ_PASSWORD: "change_me_in_production"
  JWT_SECRET: "change_me_in_production"
  WEATHER_API_KEY: "your_api_key_here"
---
apiVersion: v1
kind: Secret
metadata:
  name: irrigation-secrets
  namespace: irrigation-staging
type: Opaque
stringData:
  POSTGRES_USER: "irrigation_user"
  POSTGRES_PASSWORD: "staging_password"
  MONGODB_USER: "mongo_user"
  MONGODB_PASSWORD: "staging_password"
  RABBITMQ_USER: "rabbitmq_user"
  RABBITMQ_PASSWORD: "staging_password"
  JWT_SECRET: "staging_jwt_secret"
  WEATHER_API_KEY: "staging_api_key"
